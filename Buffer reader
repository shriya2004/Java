import java.io.*;
  2 class Addbuffer
  3 {
  4     public static void main(String args[]) throws IOException
  5     {
  6 
  7         InputStreamReader ir = new InputStreamReader(System.in);
  8         BufferedReader b = new BufferedReader(ir);
  9         System.out.println("Enter no1 : ");
 10         int a = Integer.parseInt(b.readLine());
 11         System.out.println("Enter no2 : ");
 12         int c = Integer.parseInt(b.readLine());
 13         System.out.print("sum : ");
 14         System.out.print(a + c);
 15     }
